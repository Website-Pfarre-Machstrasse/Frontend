{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "cli": {
    "analytics": false
  },
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "Website-Pfarre-Machstrasse": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/Website-Pfarre-Machstrasse",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "extractCss": true,
            "aot": true,
            "assets": [
              "src/assets",
              "src/manifest.json",
              "src/browserconfig.xml",
              "src/robots.txt",
              {
                "glob": "**/*.css",
                "input": "node_modules/codemirror/theme",
                "output": "./assets/codemirror/theme/"
              },
              {
                "glob": "**/*.css",
                "input": "node_modules/codemirror/lib",
                "output": "./assets/codemirror/lib/"
              },
              {
                "glob": "**/*.js",
                "input": "node_modules/codemirror",
                "output": "./assets/codemirror/"
              }
            ],
            "styles": [
              "src/styles.scss",
              {
                "bundleName": "homepage",
                "inject": false,
                "input": "src/app/features/homepage/homepage.theme.scss"
              },
              {
                "bundleName": "page-renderer",
                "inject": false,
                "input": "src/app/features/page-renderer/page-renderer.theme.scss"
              },
              {
                "bundleName": "gallery",
                "inject": false,
                "input": "src/app/features/gallery/gallery.theme.scss"
              },
              {
                "bundleName": "calendar",
                "inject": false,
                "input": "src/app/features/calendar/calendar.theme.scss"
              },
              {
                "bundleName": "editor",
                "inject": false,
                "input": "src/app/features/editor/editor.theme.scss"
              }
            ],
            "scripts": [],
            "allowedCommonJsDependencies": [
              "showdown",
              "codemirror",
              "@ctrl/ngx-codemirror"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "deleteOutputPath": true,
              "tsConfig": "tsconfig.app.prod.json",
              "budgets": [
                {
                  "type": "all",
                  "maximumWarning": "5mb"
                },
                {
                  "type": "initial",
                  "maximumWarning": "1mb",
                  "maximumError": "1500kb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "1kb",
                  "maximumError": "2kb"
                }
              ],
              "serviceWorker": true,
              "ngswConfigPath": "ngsw-config.json"
            },
            "es5": {
              "tsConfig": "./tsconfig-es5.app.json"
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "Website-Pfarre-Machstrasse:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "Website-Pfarre-Machstrasse:build:production"
            },
            "es5": {
              "browserTarget": "Website-Pfarre-Machstrasse:build:es5"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "Website-Pfarre-Machstrasse:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/assets",
              "src/manifest.webmanifest"
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "es5": {
              "tsConfig": "./tsconfig-es5.spec.json"
            }
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "Website-Pfarre-Machstrasse:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "Website-Pfarre-Machstrasse:serve:production"
            },
            "es5": {
              "devServerTarget": "Website-Pfarre-Machstrasse:serve:es5"
            }
          }
        }
      }
    }
  },
  "defaultProject": "Website-Pfarre-Machstrasse"
}
