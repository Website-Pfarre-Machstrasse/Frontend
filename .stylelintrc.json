{
  "extends": "stylelint-config-sass-guidelines",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "selector-no-qualifying-type": [
      true,
      {
        "ignore": ["attribute", "class"]
      }
    ],
    "selector-class-pattern": ["[a-zA-Z0-9-_]+"],
    "selector-max-compound-selectors": [4],
    "max-nesting-depth": [6]
  }
}
